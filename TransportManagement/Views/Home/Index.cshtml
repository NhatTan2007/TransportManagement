@{
    ViewBag.Title = "Trang quản lý - Công ty CP Vận tải Hùng Đạt";
    var info = CultureInfo.GetCultureInfo("vi-VN").NumberFormat;
    info = (NumberFormatInfo)info.Clone();
    info.CurrencySymbol = "VNĐ";
}
@model HomeViewModel
<div class="row">
    <div class="col-lg-3 col-6 p-1">
        <!-- small box -->
        <div class="small-box" style="background-image: linear-gradient(to bottom, rgba(52, 152, 219,0.9), rgba(41, 128, 185,0.9))">
            <div class="inner">
                <div class="col-12 triangle-topleft">
                    <p class="m-0">Số chuyến đã xong</p>
                    <h3>@Model.TransportCompeletedInMonth</h3>
                </div>
                <div class="col-12 triangle-bottomright position-relative">
                    <h3>@Model.TransportInMonth</h3>
                    <p class="m-0">Tổng chuyến theo tháng</p>
                </div>
            </div>
            @*<div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>*@
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6 p-1">
        <!-- small box -->
        <div class="small-box" style="background-image: linear-gradient(to bottom,rgba(22, 160, 133,0.9), rgba(26, 188, 156,0.3))">
            <div class="inner">
                <div class="col-12 triangle-topleft">
                    <p class="m-0">Số xe đang vận chuyển</p>
                    <h3>@Model.VehiclesBusyCount</h3>
                </div>
